{#{% block body %}#}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="formLogin">
        <div class="formCloseContainer">
            <a class="formCloseLink">
                <img src="{{ asset('build/images/closeBtn.png') }}" alt="Close"/>
            </a>
        </div>
        <div class="formLoginTitle">
            <h1>LOGIN</h1>
            <h1>LOGIN</h1>
        </div>
        <div class="formLoginBody">
            <form action="{{ path('app_login') }}" method="post">
                <label for="username">Login ID:</label>
                <br>
                <input type="text" id="username" name="_username" value="{{ last_username }}">
                <br>
                <label for="password">Password:</label>
                <br>
                <input type="password" id="password" name="_password">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <br>
                <button type="submit">LOGIN</button>
                <label class="formTextCheckbox">
                    <input type="checkbox" name="_remember_me" id="formLoginCheckbox" checked/>
                    Keep me logged in
                </label>
                <div class="formLoginLink">
                    <a href="{{ path('app_forgot_password_request') }}">Forgot password</a>
                </div>
            </form>
        </div>
    </div>

{#{% endblock %}#}
