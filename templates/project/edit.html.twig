{#{% extends 'base.html.twig' %}#}

{#{% block title %}Edit Project{% endblock %}#}

{#{% block body %}#}
{#<div class="ptk-formBlock">#}
    <div class="ptk-formContainer" id="ptk-editProfileFormContainer">
        <div class="ptk-formCloseContainer">
            <a class="ptk-formCloseBttn" id="ptk-closeEditProjectModalLink">
                <img src="{{ asset('build/images/closeBtn.png') }}" alt="Close"/>
            </a>
        </div>
        <div class="ptk-formTitleContainer">
            <h1 class="ptk-formTitle">Edit Project</h1>
        </div>
        {{ form_start(formEdit) }}
        <div class="ptk-formErrors ptk-formContainerMargins">
            {{ form_errors(formEdit) }}
        </div>
        <div class="ptk-formRow ptk-formContainerMargins">
            {{ form_label(formEdit.title, null, {'label_attr': {'class': 'ptk-formLabels'}}) }}
            {{ form_widget(formEdit.title, {'attr': {'class': 'ptk-formTitleInput'}}) }}
        </div>
        <div class="ptk-formRow ptk-formContainerMargins">
            {{ form_label(formEdit.content, null, {'label_attr': {'class': 'ptk-formLabels'}}) }}
            {{ form_widget(formEdit.content, {'attr': {'class': 'ptk-formContentInput'}}) }}
        </div>
        <div class="ptk-formRow ptk-formContainerMargins">
            {{ form_label(formEdit.category, null, {'label_attr': {'class': 'ptk-formLabels'}}) }}
            {{ form_widget(formEdit.category, {'attr': {'class': 'ptk-formTitleInput', 'readonly':'1'}}) }}
        </div>
        {{ form_row(formEdit._token) }}
        <div class="ptk-formBttnsContainer">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="ptk-formBttns">{{ button_label|default('Save') }}</button>
            <form method="post" action="{{ path('app_project_delete', {'id': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                <button class="ptk-formBttns">Delete</button>
            </form>
        </div>
        {{ form_end(formEdit, {'render_rest': false }) }}
    </div>
{#</div>#}
{#{% endblock %}#}
