{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
<div class="ptk-projectFormBlock">
    <div class="ptk-projectFormContainer">

        <div class="ptk-projectFormCloseContainer">
            <a href="{{ path('app_project_show', {id: project.id}) }}" class="ptk-projectFormCloseBttn">X</a>
        </div>

        <div class="ptk-projectFormTitleContainer">
            <h1 class="ptk-projectFormTitle">Edit Project</h1>
        </div>

    {{ form_start(form) }}

    <div class="ptk-formErrors ptk-formContainerMargins">
        {{ form_errors(form) }}
    </div>

        <div class="ptk-formRow ptk-formContainerMargins">
            {{ form_label(form.category, 'Team', {'label_attr': {'class': 'ptk-formLabels'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'ptk-formTitleInput'}}) }}
        </div>
        <div class="ptk-formRow ptk-formContainerMargins">
            {{ form_label(form.title, null, {'label_attr': {'class': 'ptk-formLabels'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'ptk-formTitleInput'}}) }}
        </div>
        <div class="ptk-formRow ptk-formContainerMargins">
            {{ form_label(form.content, null, {'label_attr': {'class': 'ptk-formLabels'}}) }}
            {{ form_widget(form.content, {'attr': {'class': 'ptk-formContentInput'}}) }}
        </div>
        {{ form_row(form._token) }}

        <div class="ptk-formBttnsContainer">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="ptk-formBttns">{{ button_label|default('Save') }}</button>
            {{ include('project/_delete_form.html.twig') }}
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
