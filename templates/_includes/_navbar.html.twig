{% if app.user %}

    <div class="ptk-navbarLogoContainer">
        <p class="ptk-logo"><a href="{{ path('app_home') }}"><span class="ptk-linksHover">PARTAKE</span></a></p>
    </div>

    {% if (form is defined) and (edit is not defined) %}
        <div class="ptk-searchContainer">
        {{ form_start(form, {'attr': {'class': 'searchBar'}}) }}
        {{ form_widget(form, {'attr': {'class': 'inputSearchBar'}}) }}
        {{ form_end(form) }}
        </div>
    {% endif %}

    <div class="ptk-navDropdownDatatype">
        <div class="ptk-navDropDownBtnContainer">
            <button class="ptk-navDropDownbtn">
                <span class="ptk-linksHover">{{ app.user.lastname }} {{ app.user.firstname }}</span>
            </button>
        </div>
        <div class="ptk-navDropdownContent">
            <a href="{{ path('app_user_show', {'id': app.user.id, 'orderBy': 'oldest', 'dataType': 'Projects and Ideas'}) }}">
                Profile
            </a>
            {% if app.user.roles[0] == "ROLE_ADMIN" %}
                <a href="{{ path('app_admin_user_list') }}">
                    Admin
                </a>
            {% endif %}
            <a href="{{ path('app_logout') }}">
                Logout
            </a>
        </div>
    </div>

{% else %}

    <div class="ptk-navbarLogoContainer">
        <p class="ptk-logo">
            <a href="{{ path('app_home') }}">
                <span class="ptk-linksHover">PARTAKE</span>
            </a>
        </p>
    </div>
    <div class="ptk-searchContainer">
    </div>
    <div class="ptk-expandMenuContainer">
        <a href="{{ path('app_login') }}" class="ptk-navbarLinks">
            <span class="ptk-linksHover">Login</span>
        </a>
    </div>

{% endif %}
