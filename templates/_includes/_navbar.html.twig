{% if app.user %}

    <div class="ptk-navbarLogoContainer">
        <p class="ptk-logo"><a href="{{ path('app_home') }}" class="ptk-loader"><span class="ptk-linksHover">PARTAKE</span></a></p>
    </div>

    <div class="ptk-searchContainer">
        <form action="{{ path('app_home') }}" method="get" class="inputSearchBar">
            <input type="text" class="search-input" placeholder="Search" name="searchBar" id="search" required>
        </form>
    </div>

    <div class="ptk-navDropdownDatatype">
        <div class="ptk-navDropdown">
            <div class="ptk-navDropDownBtnContainer">
                <button class="ptk-navDropDownbtn">
                    <span class="ptk-linksHover">{{ app.user.lastname }} {{ app.user.firstname }}</span>
                </button>
            </div>
            <div class="ptk-navDropdownContent">
                <a href="{{ path('app_user_show', {'id': app.user.id, 'orderBy': 'oldest', 'dataType': 'Projects and Ideas'}) }}" class="ptk-loader">
                    Profile
                </a>
                {% if app.user.roles[0] == "ROLE_ADMIN" %}
                    <a href="{{ path('app_admin_user_list') }}" class="ptk-loader">
                        Admin
                    </a>
                {% endif %}
                <a href="{{ path('app_logout') }}" class="ptk-loader">
                    Logout
                </a>
            </div>
        </div>
    </div>

{% else %}

    <div class="ptk-navbarLogoContainer">
        <p class="ptk-logo">
            <a href="{{ path('app_home') }}">
                <span class="ptk-linksHover">PARTAKE</span>
            </a>
        </p>
    </div>
    <div class="ptk-searchContainer">
    </div>
    <div class="ptk-expandMenuContainer">
        <a href="{{ path('app_login') }}" class="ptk-navbarLinks">
            <span class="ptk-linksHover">Login</span>
        </a>
    </div>

{% endif %}
