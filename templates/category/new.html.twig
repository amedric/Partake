    <div class="ptk-teamFormContainer">

        <div class="ptk-teamFormTitleContainer">
            <h1 class="ptk-teamFormTitle">Add Team</h1>
        </div>

        {{ form_start(form) }}

        <div class="ptk-formErrors ptk-formContainerMargins">
            {{ form_errors(form) }}
        </div>

        <div class="ptk-formRow ptk-formContainerMargins">
            {{ form_label(form.title, null, {'label_attr': {'class': 'ptk-formLabels'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'ptk-formTitleInput'}}) }}
        </div>
        <div class="ptk-formRow ptk-formContainerMargins">
            {{ form_label(form.categoryColor, 'Team Colour', {'label_attr': {'class': 'ptk-formLabels'}}) }}
            {{ form_widget(form.categoryColor, {'attr': {'class': 'ptk-formTitleInput'}}) }}
        </div>

        {{ form_row(form._token) }}

        <div class="ptk-formBttnsContainer">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="ptk-formBttns">{{ button_label|default('Save') }}</button>
        </div>

        {{ form_end(form, {'render_rest': false }) }}
    </div>
