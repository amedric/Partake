{% extends '/adminBase.html.twig' %}

{% block title %}Admin - Projects{% endblock %}

{% block adminTitle %}<h1 class="ptk-adminTitle">Projects</h1>{% endblock %}

{% block adminBody %}

    <div class="ptk-adminViewInfoContainer">
        <table>
            <thead>
            <tr>
                <th class="ptk-adminTableGap ptk-adminTableHeader">Title</th>
                <th class="ptk-adminTableGap ptk-adminTableHeader">Content</th>
                <th class="ptk-adminTableGap ptk-adminTableHeader">Created At</th>
                <th class="ptk-adminTableGap ptk-adminTableHeader">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr class="ptk-adminDataRow">
                        <td class="ptk-adminTableGap ptk-adminTableData">{{ project.title|striptags|length > 40 ? project.title|striptags|slice(0, 40) ~ '...' : project.title|striptags }}</td>
                    <td class="ptk-adminTableGap ptk-adminTableData">{{ project.content|striptags|length > 40 ? project.content|striptags|slice(0, 40) ~ '...' : project.content|striptags }}</td>
                    <td class="ptk-adminTableGap ptk-adminTableData">{{ project.createdAt ? project.createdAt|date('d-m-Y') : '' }}</td>
                    <td class="ptk-teamBttns">
                        <a href="{{ path('app_admin_project_view', {'id': project.id}) }}" class="btn ptk-bttns ptk-smlBttns">View</a>
                        {% include '/project/_delete_form.html.twig' %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
