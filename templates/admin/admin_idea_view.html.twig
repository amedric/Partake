{% extends '/adminBase.html.twig' %}

{% block title %}Admin - Idea{% endblock %}

{% block adminTitle %}<h1 class="ptk-adminTitle">Idea ID: {{ idea.id }}</h1>{% endblock %}

{% block adminBody %}

    <div class="ptk-adminViewInfoContainer">

        <div>
            <h2 class="ptk-adminViewLabel">Idea Title:</h2>
            <p class="ptk-adminViewContent">{{ idea.title }}</p>
        </div>
        <div>
            <h2 class="ptk-adminViewLabel">Description:</h2>
            <p class="ptk-adminViewContent">{{ idea.content }}</p>
        </div>
        <div>
            <h2 class="ptk-adminViewLabel">Project title:</h2>
            <p class="ptk-adminViewContent">{{ idea.project.title }}</p>
        </div>
        <div>
            <h2 class="ptk-adminViewLabel">Idea created by: <span>{{ idea.user.fullName }}</span></h2>
        </div>
        <div>
            <h2 class="ptk-adminViewLabel">Idea created at: <span>{{ idea.createdAt ? idea.createdAt|date('d-m-Y') : '' }}</span></h2>
        </div>
        <div class="ptk-adminViewBttnsContainer">
            <a href="{{ path('app_admin_idea_list') }}" class="btn ptk-bttns ptk-smlBttns">Back</a>
            <form method="post" action="{{ path('app_admin_idea_delete', {'id': idea.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ idea.id) }}">
                <button class="btn ptk-bttns ptk-smlBttns">Delete</button>
            </form>
        </div>
    </div>

{% endblock %}
